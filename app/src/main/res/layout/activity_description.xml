<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionActivity"
    android:background="@color/grey">

    <RelativeLayout
        android:id="@+id/movie_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kong_godzilla"
            android:layout_width="fill_parent"
            android:layout_height="310dp"
            android:layout_marginBottom="418dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/godzilla_vs_kong" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/back_arrow"/>

        <TextView
            android:id="@+id/year_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/godzilla_vs_kong"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginVertical="265dp"
            android:layout_marginHorizontal="120dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/movie_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2021_action_adventure_2h_35min"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_7_2"
            android:textColor="@color/yellow"/>


            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:rating="4"
                android:stepSize="1"
                android:theme="@style/RatingBar"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_describe_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/main_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/godzilla_vs_kong_is_a_2021_american_monster_film_directed_by_adam_wingard_in_the_film_kong_clashes_with_godzilla_as_humans_lure_the_ape_into_the_hollow_earth_to_retrieve_a_power_source_for_a_secret_weapon_to_stop_godzilla_s_mysterious_rampages"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cast"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actors_pics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/actors_pics1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="35dp"
                android:background="@drawable/actors_images"
                android:src="@drawable/andrew_skarsgard_image" />


            <ImageView
                android:id="@+id/actors_pics2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="20dp"
                android:src="@drawable/millie_bobbie_brown" />



            <ImageView
                android:id="@+id/actors_pics3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="20dp"
                android:background="@drawable/rebecca_hall2" />

            <ImageView
                android:id="@+id/actors_pics4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="20dp"
                android:background="@drawable/julian_dennison" />

            <ImageView
                android:id="@+id/actors_pics5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="20dp"
                android:background="@drawable/brian_tyree_henry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actors_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/actors_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/andrew_skarsgard"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/actors_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/billie_brown"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/actors_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rebecca_hall"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginStart="14dp"/>

            <TextView
                android:id="@+id/actors_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/julian_denisson"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/actors_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brian_henry"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginStart="10dp"/>

            </LinearLayout>

        <LinearLayout
                android:id="@+id/actors_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/actors_role1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dr_nathan_lind"
                    android:textSize="8sp"
                    android:textColor="@color/light_grey"
                    android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/actors_role2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/madison_russell"
                android:textSize="8sp"
                android:textColor="@color/light_grey"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/actors_role3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dr_iilene_andrews"
                android:textSize="8sp"
                android:textColor="@color/light_grey"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/actors_role4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/josh_valentine"
                android:textSize="8sp"
                android:textColor="@color/light_grey"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/actors_role5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bernie_hayes"
                android:textSize="8sp"
                android:textColor="@color/light_grey"
                android:layout_marginStart="19dp"/>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>